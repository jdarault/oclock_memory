{% extends "base.html.twig" %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-4">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                    <div class="form-group row">
                        {{ form_label(form.nom) }}
                        <div class="col-md-10">
                            {{ form_widget(form.nom) }}
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <h3>Meilleurs Scores</h3>
                {% if scores is null or scores|length == 0 %}
                    <p>Aucun score</p>
                {% else %}
                    <ul>
                        {% for s in scores %}
                            <li>{{ s.nom }} <span>{{ s.tempsRealise|date('i:s') }}</span></li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}